<p id="notice"><%= notice %></p>

<h1>Listing Lots</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Block</th>
      <th>Satage</th>
      <th>Square meters</th>
      <th>Status</th>
      <th>Salesman</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.number %></td>
        <td><%= lot.block %></td>
        <td><%= lot.satage %></td>
        <td><%= lot.square_meters %></td>
        <td><%= lot.status %></td>
        <td><%= lot.salesman %></td>
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

