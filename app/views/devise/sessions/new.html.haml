%h2.text-center Iniciar sesión
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.label 'Nombre de usuario / email'
    %br/
    = f.text_field :login, autofocus: true, class: "form-control"
  .form-group
    = f.label 'Contraseña'
    %br/
    = f.password_field :password, autocomplete: "off", class: "form-control"
  .btn-group-justified{"aria-label" => "Justified button group", :role => "group"}
    .btn-group{:role => "group"}
      = f.submit "Iniciar", class: "btn btn-primary"
  - if devise_mapping.rememberable?
    .form-group
      = f.check_box :remember_me
      = f.label 'Recordarme'
= render "devise/shared/links"
